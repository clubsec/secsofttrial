<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login / Logout"
            android:id="@+id/loginmenu" android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_marginTop="170dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capacity Checks"
            android:id="@+id/capacitymenu" android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_marginTop="256dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refusals"
            android:id="@+id/refusalmenu" android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_marginTop="360dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Incidents"
            android:id="@+id/incidentmenu" android:layout_alignLeft="@+id/refusalmenu" android:layout_alignParentTop="true"
            android:layout_marginTop="460dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Venue Checks"
            android:id="@+id/venuecheckmenu" android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_marginTop="578dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Managers Reporting"
            android:id="@+id/reportsmenu"
            android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_marginTop="776dp"/>
</RelativeLayout>